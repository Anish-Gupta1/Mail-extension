{
  "manifest_version": 3,
  "name": "mAIl GENarator",
  "version": "1.0",
  "description": "A basic Chrome extension using React.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/*"
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  }
}